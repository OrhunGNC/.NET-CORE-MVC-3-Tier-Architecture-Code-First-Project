@model IEnumerable<coreModel.Model.Units>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UnitName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumbofEmployee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Taskks)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UnitName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumbofEmployee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Taskks.TaskksId)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.UnitId" class="btn btn-primary">Edit</a> |
                    <a asp-action="Delete" asp-route-id="@item.UnitId" class="btn btn-danger">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
